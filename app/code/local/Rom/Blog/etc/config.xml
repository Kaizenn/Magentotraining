<?xml version="1.0"?>
  <config>
     <modules>
        <Rom_Blog>
          <version>1.0.0</version>
        </Rom_Blog>
     </modules>
	<frontend>
		<routers>
			<routerfrontendblog>
				<use>standard</use>
     				<args>
     					<module>Rom_Blog</module>
     					<frontName>blog</frontName>
     				</args>
     		</routerfrontendblog>
     	</routers>
     	<layout>
		   <updates>
				<blog>
					 <file>blog.xml</file>
				 </blog>
			</updates>
		</layout>
	</frontend>
	<admin>
		<routers>
			<blog>
				<use>admin</use>
				<args>
					<module>Rom_Blog</module>
					<frontName>adminblog</frontName>
				</args>
			</blog>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<blog>
					<file>blog.xml</file>
				</blog>
			</updates>
		</layout>
		<menu>
			<blog translate="title" module="adminhtml">
				<title>Blog</title>
				<sort_order>101</sort_order>
				<children>
					<set_time>
						<title>Nouveau message</title>
						<action>adminblog/adminhtml_index</action>
					</set_time>
				</children>
			</blog>
		</menu>
	</adminhtml>
	<global>
		<blocks>
			<blog>
				<class>Rom_Blog_Block</class>
			</blog>
		</blocks>
		<models>
			<blog>
				 <class>Rom_Blog_Model</class>
				 <resourceModel>blog_mysql4</resourceModel>
			 </blog>
			<blog_mysql4>
				 <class>Rom_Blog_Model_Mysql4</class>
				 <entities>
					 <mymodel>
					   <table>rom_blog</table>
					 </mymodel>
				 </entities>
			</blog_mysql4>
		</models>
		<resources>
			<blog_write>
				<connection>
					<use>core_write</use>
				</connection>
			</blog_write>
			<blog_read>
				<connection>
					<use>core_read</use>
				</connection>
			</blog_read>
		</resources>		
	</global>
</config>
